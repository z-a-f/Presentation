
\makeatletter
\mode
<presentation>
{
  \def\beamer@callcustomtheme#1#2#3{%
    \def\beamer@themelist{#2}
    \@for\beamer@themename:=\beamer@themelist\do{
      \usepackage{#1#3\beamer@themename}}}
  
  \newcommand\customtheme[2][]{\beamer@callcustomtheme{#1}{#2}{beamertheme}}
  \newcommand\customcolortheme[2][]{\beamer@callcustomtheme{#1}{#2}{beamercolortheme}}
  \newcommand\customfonttheme[2][]{\beamer@callcustomtheme{#1}{#2}{beamerfonttheme}}
  \newcommand\customoutertheme[2][]{\beamer@callcustomtheme{#1}{#2}{beameroutertheme}}
  \newcommand\custominnertheme[2][]{\beamer@callcustomtheme{#1}{#2}{beamerinnertheme}}
}
\mode<all>
\makeatother
